# HMAS Environment Variables Example
# Copy this file to .env and modify as needed

# Environment Settings
HMAS_ENV=development  # development, testing, staging, production
HMAS_DEBUG=false
HMAS_TESTING=false
HMAS_HOST=0.0.0.0
HMAS_PORT=8000
HMAS_BASE_URL=http://localhost:8000

# Database Configuration
HMAS_DB_HOST=localhost
HMAS_DB_PORT=27017
HMAS_DB_USERNAME=admin
HMAS_DB_PASSWORD=your_secure_password
HMAS_DB_NAME=hmas
HMAS_DB_MAX_CONNECTIONS=10
HMAS_DB_TIMEOUT=30.0
HMAS_DB_SSL=false

# Redis Configuration
HMAS_REDIS_HOST=localhost
HMAS_REDIS_PORT=6379
HMAS_REDIS_PASSWORD=your_redis_password
HMAS_REDIS_DB=0
HMAS_REDIS_SSL=false

# Security Configuration
HMAS_SECRET_KEY=your_secret_key_here
HMAS_JWT_SECRET=your_jwt_secret_here
HMAS_TOKEN_EXPIRY=3600
HMAS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
HMAS_SSL_ENABLED=false
HMAS_SSL_CERT_PATH=/path/to/cert.crt
HMAS_SSL_KEY_PATH=/path/to/private.key

# Logging Configuration
HMAS_LOG_LEVEL=INFO
HMAS_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
HMAS_LOG_FILE=/path/to/log/file.log
HMAS_LOG_ROTATE_SIZE=10485760
HMAS_LOG_ROTATE_COUNT=5
HMAS_LOG_JSON=false

# Monitoring Configuration
HMAS_MONITORING_ENABLED=true
HMAS_PROMETHEUS_ENABLED=false
HMAS_METRICS_PORT=9090
HMAS_HEALTH_CHECK_INTERVAL=30
HMAS_TRACING_ENABLED=false
HMAS_TRACING_SAMPLE_RATE=0.1

# Resource Limits
HMAS_CPU_LIMIT=1
HMAS_MEMORY_LIMIT=1Gi
HMAS_STORAGE_LIMIT=10Gi
HMAS_MAX_WORKERS=4
HMAS_REQUEST_TIMEOUT=30

# Service-specific Settings
HMAS_PERCEPTION_PORT=8100
HMAS_MEMORY_PORT=8200
HMAS_LEARNING_PORT=8300
HMAS_REASONING_PORT=8400
HMAS_COMMUNICATION_PORT=8500
HMAS_FEEDBACK_PORT=8600
HMAS_INTEGRATION_PORT=8700 